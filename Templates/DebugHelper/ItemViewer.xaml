<UserControl x:Class="FindersKeepers.Templates.DebugHelper.ItemViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FindersKeepers.Templates.DebugHelper"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="630" Height="430">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Show image for </TextBlock>
            <TextBlock Margin="10,0,0,0" Text="{Binding Text}" />
        </StackPanel>

        <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
            <TextBlock Margin="10,0,0,0" Text="{Binding Formatted}"/>
        </StackPanel>

        <Border BorderBrush="Black" BorderThickness="1" Width="75" Height="90">
            <Image Width="75" Height="90" Source="{Binding Image}"/>
        </Border>
    </Grid>
</UserControl>
