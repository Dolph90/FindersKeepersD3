                                <Label Content="Minimize Finderskeepers" />
                            </Border.ToolTip>
                            <Image Source="./../../Images/FK/Icons/minimize.png" Width="8" Height="8" Margin="2,10,0,0"/>
                        </Border>

                        <Border Width="25" Height="25" Background="#ff3c3c" Cursor="Hand" MouseDown="CloseFK" >
